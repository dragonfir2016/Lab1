<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/inputH_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="H_g (Водень, %)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputC_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="C_g (Вуглець, %)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputS_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="S_g (Сірка, %)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputO_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="O_g (Кисень, %)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputA_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="A_g (Зола, %)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputW_p_mazut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="W_p (Волога, %)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputV_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="V_g (Ванадій, мг/кг)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <EditText
            android:id="@+id/inputQ_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Q_g (Нижча теплота, МДж/кг)"
            android:inputType="numberDecimal"
            android:backgroundTint="#2E7D32" />

        <Button
            android:id="@+id/calculateButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розрахувати"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/resultsTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Результати відобразяться тут"
            android:textSize="16sp"
            android:textColor="#1B5E20" />
    </LinearLayout>
</ScrollView>
